<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>

    <!-- Allow cleartext traffic for development/local servers -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">10.0.2.2</domain> <!-- Android emulator localhost -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
    </domain-config>

    <!-- Allow HTTPS traffic for production APIs -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">api.smartsoilai.com</domain>
        <domain includeSubdomains="true">smartsoilai.com</domain>
        <!-- Add your production API domains here -->
    </domain-config>
</network-security-config>
